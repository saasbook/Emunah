.container
  %h1.header-container 
    = "Families"
  - flash.each do |type, msg|
    %strong
      = msg
  
  - if @user.is_admin
    .resource-container
      = react_component("CreateResource", {title:"Family", url:new_family_path, color: '#CBB3BF'}, {:style => "display:inline-block"})
    .container
      %table#families
        %thead
          %tr
            %th Family Name
            %th Family Information
        %tbody
          - @families.each do |family|
            %tr
              %td= family.family_name
              %td= link_to "See Family Info", family_path(family)