.container
	%h1 Welcome to Congregation B'nai Emunah's Internal Tool!
	- flash.each do |type, msg|
		%strong
			= msg
	.jumbotron
		= form_tag login_path do
			.row		
				= label :user, :email, 'Email'
				%br
				.col-xs-4.no-left-padding.bot-padding
					= text_field :user, 'email', class: "form-control"
			.row
				= label :user, :password, 'Password'
				%br
				.col-xs-4.no-left-padding.bot-padding
					= password_field :user, 'password', class: "form-control"
			%br
			.row
				= submit_tag 'Log In', class: "btn btn-default"
